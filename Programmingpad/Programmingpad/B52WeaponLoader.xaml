<Page x:Class="Programmingpad.B52WeaponLoader"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Programmingpad"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="B-52 Weapon Loader" Height="900" Width="1600">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Image Grid.Row="0" Grid.Column="0" Source="Images/Gravity.png"/>
                <Image Grid.Row="0" Grid.Column="1" Source="Images/JASSM.png"/>
                <Image Grid.Row="0" Grid.Column="2" Source="Images/JDAM.png"/>
                <Image Grid.Row="1" Grid.Column="0" Source="Images/MALD.png"/>
                <Image Grid.Row="1" Grid.Column="1" Source="Images/WCMD.png"/>
                <Image Grid.Row="1" Grid.Column="2" Source="Images/ALCM-CALCM.png"/>
                <Image Grid.Row="2" Grid.Column="1" Source="Images/ALCM-CALCM.png"/>
                
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                
                <!-- Select weapon to add -->
                <ComboBox Name="WeaponComboBox" Grid.Column="0" Grid.Row="0" IsEditable="True" IsReadOnly="True" Text="Weapon to Add:" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <ComboBoxItem>Gravity</ComboBoxItem>
                    <ComboBoxItem>JASSM</ComboBoxItem>
                    <ComboBoxItem>JDAM</ComboBoxItem>
                    <ComboBoxItem>MALD</ComboBoxItem>
                    <ComboBoxItem>WCMD</ComboBoxItem>
                    <ComboBoxItem>CALCM</ComboBoxItem>
                    <ComboBoxItem>ALCM</ComboBoxItem>
                </ComboBox>
                <ComboBox Name="StorageComboBox" Grid.Column="1" Grid.Row="0" IsEditable="True" IsReadOnly="True" Text="Location to Add to:" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <ComboBoxItem>Left Wing</ComboBoxItem>
                    <ComboBoxItem>Right Wing</ComboBoxItem>
                    <ComboBoxItem>Bay</ComboBoxItem>
                </ComboBox>
                <Button Grid.Column="2" Grid.Row="0" Click="AddWeapon">Add</Button>
                <!-- Add fuel button -->
                <Button Grid.Column="2" Grid.Row="1" Click="AddFuel">Add</Button>
                <Label Grid.Column="0" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Amount of fuel to add</Label>
                <TextBox Name="FuelTextBox" Grid.Column="1" Grid.Row="2" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
             
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>                
                <Button Grid.Column="0" Grid.Row="0" Click="ClearAllWeapons">Clear All Weapons</Button>
                
                <Button Grid.Column="1" Grid.Row="0" Click="ClearFuel">Clear Fuel</Button>
            </Grid>
        
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Weight" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                <Label Grid.Column="1" Name="WeightLabel" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                
            </Grid>
            <Image Grid.Row="1" Source="Images/B-52 Top.png" />
            <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="326,315,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="100" AllowDrop="True" Name="LeftWingReg" />
            <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="639,315,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="100" AllowDrop="True" Name="RightWingReg"/>
            <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="100" Margin="481,384,0,0" Grid.Row="1" Stroke="Black" VerticalAlignment="Top" Width="100" AllowDrop="True" Name="BayReg"/>
        </Grid>

    </Grid>
       
</Page>
